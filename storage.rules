rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Solo archivos en la carpeta transfers
    match /transfers/{sessionId}/{allPaths=**} {
      // Cualquiera puede escribir (necesario para uploads)
      allow write: if true;

      // Cualquiera puede leer (los códigos de sesión son la protección)
      allow read: if true;
    }
  }
}
