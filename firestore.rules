rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /transfers/{transferId} {
      // Cualquiera puede crear (necesario para usuarios no autenticados)
      allow create: if true;

      // Cualquiera puede leer (los códigos de sesión son la protección)
      allow read: if true;

      // Permitir actualizar campo "downloaded" sin autenticación (operación benigna)
      allow update: if request.auth != null &&
                         request.auth.uid == resource.data.ownerId ||
                         (request.writeFields.hasOnly(['downloaded', 'downloadCount']) &&
                          request.resource.data.downloaded == false);

      // Solo el creador puede eliminar
      allow delete: if request.auth != null &&
                         request.auth.uid == resource.data.ownerId;
    }
  }
}
